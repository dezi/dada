<?xml version="1.0" encoding="utf-8"?>
<com.aura.aosp.gorilla.launcher.ui.content.LauncherView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/color_launcher_background"
    tools:context=".LauncherActivity">

    <com.aura.aosp.gorilla.launcher.ui.status.LauncherStatusBar
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="@dimen/statusbar_padding_horizontal"
        android:paddingVertical="@dimen/statusbar_padding_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:id="@+id/statusProfileInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_dotdotdot"
            android:textColor="@color/color_launcher_overlay_text"
            android:textSize="18dp"
            android:textStyle="normal" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/statusImageSystem"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="right|center_vertical"
            android:paddingVertical="@dimen/statusbar_statusimage_padding_vertical"
            android:paddingHorizontal="@dimen/statusbar_statusimage_padding_horizontal"
            android:tint="@color/color_statusbar_statusimage_disabled"
            app:srcCompat="@drawable/timeline_oval_18dp" />

        <ImageView
            android:id="@+id/statusImageOnline"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="right|center_vertical"
            android:paddingVertical="@dimen/statusbar_statusimage_padding_vertical"
            android:paddingHorizontal="@dimen/statusbar_statusimage_padding_horizontal"
            android:tint="@color/color_statusbar_statusimage_disabled"
            app:srcCompat="@drawable/timeline_oval_18dp" />
    </com.aura.aosp.gorilla.launcher.ui.status.LauncherStatusBar>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/timelineContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/overlayText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/launcher_overlay_text"
            android:textColor="@color/color_launcher_overlay_text"
            android:textSize="50dp"
            android:textStyle="bold" />

        <com.aura.aosp.gorilla.launcher.ui.content.TimelineView
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="96dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/actionClusterContainer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="@dimen/actioncluster_container_lay_marginHorizontal"
        android:layout_marginVertical="@dimen/actioncluster_container_lay_marginVertical"
        android:paddingHorizontal="@dimen/actioncluster_container_paddingHorizontal"
        android:paddingVertical="@dimen/actioncluster_container_paddingVertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/toggle_cluster_button" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/actionClusterMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@color/color_actioncluster_container_mask_background" />

    </FrameLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="285dp" />

</com.aura.aosp.gorilla.launcher.ui.content.LauncherView>